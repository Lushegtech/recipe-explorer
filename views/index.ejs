<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/public/main.css">
    <title>Meal Search</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container my-5">
        <header>
            <h1 class="display-4 text-center mb-4">Meal Search</h1>
        </header>

        <main>
            <form action="/search" method="GET" class="mb-4">
                <div class="input-group">
                    <input type="text" class="form-control" name="q" placeholder="Enter a meal name" required>
                    <button type="submit" class="btn btn-secondary" aria-label="Search">
                        <i class="bi bi-search me-1"></i>
                    </button>
                </div>
            </form>

            <% if (error) { %>
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <%= error %>
                </div>
            <% } %>

            <% if (foods && foods.length > 0) { %>
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    <% foods.forEach(food => { %>
                        <div class="col">
                            <div class="card h-100 shadow-sm meal-card">
                                <img 
                                    src="<%= food.strMealThumb %>" 
                                    class="card-img-top meal-image" 
                                    alt="<%= food.strMeal %>"
                                    loading="lazy"
                                >
                                <div class="card-body">
                                    <h5 class="text-center card-title"><%= food.strMeal %></h5>
                                    <p class="text-center card-text"><%= food.strArea %> Cuisine</p>
                                    <hr>
                                    <p class="card-text">
                                        <small><i>Instructions:</i></small>
                                    </p>
                                    <p class="card-text text-truncate">
                                        <%= food.strInstructions %>
                                    </p>
                                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#modal<%= food.idMeal %>">
                                        View Details
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="modal<%= food.idMeal %>" tabindex="-1" aria-labelledby="modalLabel<%= food.idMeal %>" aria-hidden="true">
                            <div class="modal-dialog modal-lg modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header border-0">
                                        <h5 class="modal-title fs-4" id="modalLabel<%= food.idMeal %>"><%= food.strMeal %></h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-image-container">
                                        <div class="loading-spinner"></div>
                                        <img 
                                            src="<%= food.strMealThumb %>" 
                                            class="modal-meal-image loading" 
                                            alt="<%= food.strMeal %>"
                                            onload="this.classList.remove('loading')"
                                        >
                                    </div>
                                    <div class="modal-body">
                                        <div class="row g-4">
                                            <div class="col-md-5">
                                                <h6 class="mb-3 fw-bold">Ingredients</h6>
                                                <ul class="ingredients-list">
                                                    <% for (let i = 1; i <= 20; i++) { %>
                                                        <% if (food[`strIngredient${i}`]) { %>
                                                            <li class="ingredient-item">
                                                                <i class="bi bi-circle-fill fs-6 text-secondary"></i>
                                                                <span><%= food[`strIngredient${i}`] %></span>
                                                                <span class="ms-auto text-muted"><%= food[`strMeasure${i}`] %></span>
                                                            </li>
                                                        <% } %>
                                                    <% } %>
                                                </ul>
                                            </div>
                                            <div class="col-md-7">
                                                <h6 class="mb-3 fw-bold">Instructions</h6>
                                                <p class="instructions-text text-muted">
                                                    <%= food.strInstructions %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else if (!error) { %>
                <div class="alert alert-info" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    No meals found. Please enter a meal name or try another search.
                </div>
            <% } %>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>