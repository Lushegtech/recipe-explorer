<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" href="/public/main.css"> 
        <title>Meal Search</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body class="bg-light">
        <div class="container my-5">
            <h1 class="display-4 text-center mb-4">Meal Search</h1>

            <form action="/search" method="GET" class="mb-4">
                <div class="input-group">
                    <input type="text" class="form-control" name="q" placeholder="Enter a meal name" required>
                    <button type="submit" class="btn btn-secondary">
                        <i class="bi bi-search me-1"></i>
                    </button>
                </div>
            </form>

            <% if (foods && foods.length > 0) { %>
                    <div class="row row-col-1 row-cols-md-2 row-cols-lg-3 g-4">
                        <% foods.forEach(food => { %>
                            <div class="col">
                                <div class="card h-100 shadow-sm meal-card">
                                    <img src="<%= food.strMealThumb %>" class="card-image-top " alt= "<%= food.strMeal %>">
                                    <div class="card-body">
                                        <h5 class="text-center card-title"><%=  food.strMeal %></h1>
                                        <p class="text-center card-text"><%= food.strArea %> Cuisine</p>
                                        <hr>
                                        <p class="card-text">
                                            <small><i>Instructions:</i></small>
                                        </p>
                                        <p class="card-text">
                                            <%= food.strInstructions.substring(0, 100) %>...
                                        </p>
                                        <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="collapse" data-bs-target="#instructions<%= food.idMeal %>" aria-expanded="false" aria-controls="instructions<%= food.idMeal %>">
                                            Read More
                                        </button>                                        
                                        <div class="collapse mt-2" id="instructions<%= food.idMeal %>">
                                            <p class="card-text"><%= food.strInstructions %></p>
                                        </div>                                                                    
                                    </div>   
                                </div>
                            </div>    
                        <% }); %>
                    </div>  
            <% } else { %>
                <div class="alert alert-info" role="alert"> 
                    <i class="bi bi-info-circle me-2"></i>
                    No meals found. Please enter a meal name or try another search
                </div>
            <% } %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        </div>
    </body>
</html>